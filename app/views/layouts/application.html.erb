<!DOCTYPE html>
<html>
  <head>
    <title>Owla</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% #if logged_in? %>
  <% if logged_in? %>
    <body class="hold-transition skin-black-light sidebar-mini">
  <% else %>
    <body class="layout-top-nav skin-black-light register-page">
  <% end %>

    <div id="wrapper">
        <!-- Main Header -->
        <div class="header">
          <%= render "/layouts/header" %>
        </div>

        <% #if logged_in? %>
        <% if logged_in? %>
          <%= render '/layouts/sidebar' %>
        <% end %>
        <!-- Page content -->
        <div class="container">
          <%= yield %>
        </div>
        <!-- Main Footer -->
        <div class="footer">
          <%= render "/layouts/footer" %>
        </div>
    </div><!-- ./wrapper -->
  </body>
</html>
